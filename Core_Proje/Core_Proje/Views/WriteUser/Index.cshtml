@using EntityLayer.Concrete
@model List<WriterUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-6">
    <div class="p-2">
        <button type="button" id="btngetlistall" class="btn btn-outline-primary">Get Data</button>
        <button type="button" id="btnadduser" class="btn btn-outline-info">Save</button>
    </div>
</div>

<h4 class="text-center">Writer List</h4>
<div class="p-2" id="listuser">
    data will come here
</div>

<br />

<div class="col-md-12">
    <input type="text" class="form-control" id="inpname" placeholder="Name" />
    <br />
    <input type="text" class="form-control" id="inpsurname" placeholder="Surname" />
    <br />
    <input type="text" class="form-control" id="inpusername" placeholder="User Name" />
    <br />
    <input type="text" class="form-control" id="inpmail" placeholder="Mail" />
    <br />
</div>

@section Scripts
{
    <script>
        $("#btngetlistall").click(function () {
            $.ajax({
                contentType: "application/json",
                dataType: "json",
                type: "Get",
                url: "/WriterUser/ListUser/",

                success: function (funk) {
                    let users = jQuery.parseJSON(funk);
                    console.log(users);
                }
            });
        });
    </script>
}
<script src="~/lib/jquery/dist/jquery.js"></script>
