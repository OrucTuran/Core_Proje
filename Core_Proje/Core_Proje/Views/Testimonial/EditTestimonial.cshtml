@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Testimonial Edit Panel </p>
                <form class="forms-sample">
                    <div class="form-group">
                        @*<label>ID</label>*@
                        @Html.HiddenFor(x => x.TestimonialID)
                    </div>
                    <div class="form-group">
                        <label>Name Surname</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Company</label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Image URL</label>
                        @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Comment</label>
                        @Html.TextAreaFor(x => x.Comment, 8, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Save</button>
                    <button class="btn btn-outline-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}
