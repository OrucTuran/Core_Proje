@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Message Details</h1>
<br />
<form class="form-group">
    @Html.HiddenFor(x => x.WriterMessageID, new { @class = "form-control" })
    @Html.Label("Sender Name")
    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Sender Mail")
    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Message Content")
    @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control", @readonly = "readonly" })
</form>